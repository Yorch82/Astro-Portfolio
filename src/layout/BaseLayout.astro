---
import NavBar from '@components/NavBar.astro'
import HeroBanner from '@components/HereoBanner.astro'
import FooterBlock from '@components/FooterBlock.astro'
import { ViewTransitions } from 'astro:transitions'
const { title, description } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content={description} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <div class="page">
      <NavBar />
	  <HeroBanner character='yo.png' />
      <main class='content'>        
        <slot />
      </main>
      <FooterBlock />
    </div>
  </body><style is:global>
    :root {
      --theme-color-lightest: #f2e1d8;
      --theme-color-light: #f29057;
      --theme-color-medium: #d9734e;
      --theme-color-dark: #404959;
      --theme-color-darkest: ##000;
    }
    html,
    body {
      height: 100%;
    }

    body {
      margin: 0;
    }

    main {
      min-height: 40vh;
    }
  </style>
</html>
